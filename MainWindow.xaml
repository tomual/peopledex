<Window x:Class="peopledex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:peopledex"
        mc:Ignorable="d"
        Title="Peopledex" Height="715.543" Width="700.651" Background="White">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="25">
            <MenuItem Header="_File">
                <MenuItem Header="_New Contact" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Contact" Height="25">
                <MenuItem Header="_Edit Contact" />
                <MenuItem Header="_Add Event" />
                <MenuItem Header="_Archive Contact" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <Grid>
            <Image HorizontalAlignment="Left" Height="131" Margin="34,81,0,0" VerticalAlignment="Top" Width="139" Style="{DynamicResource profileImage}" RenderTransformOrigin="0.623,0.186" Source="Resources/test.jpg"/>
            <Label x:Name="ProfileNumber" Content="#013" Margin="34,25,424,0" VerticalAlignment="Top" Foreground="#FF333333" FontSize="18" Opacity="0.5"/>
            <Label x:Name="ProfileName" Content="Thomas Olek" Margin="95,25,24,0" VerticalAlignment="Top" Foreground="#FF333333" FontSize="18"/>
            <Label Content="Date of Birth" HorizontalAlignment="Left" Margin="191,149,0,0" VerticalAlignment="Top" FontSize="14" Opacity="0.75" Width="98"/>
            <Label Content="Location" HorizontalAlignment="Left" Margin="191,81,0,0" VerticalAlignment="Top" FontSize="14" Opacity="0.75" Width="98"/>
            <Label Content="Ethnicity" HorizontalAlignment="Left" Margin="191,115,0,0" VerticalAlignment="Top" FontSize="14" Opacity="0.75" Width="98"/>
            <Label Content="Occupation" HorizontalAlignment="Left" Margin="191,183,0,0" VerticalAlignment="Top" FontSize="14" Opacity="0.75" Width="98"/>
            <Label x:Name="ProfileLocation" Content="Omaha, NE" HorizontalAlignment="Left" Margin="294,81,0,0" VerticalAlignment="Top" FontSize="14" Width="366"/>
            <Label x:Name="ProfileEthnicity" Content="Half Australian, half Japanese" HorizontalAlignment="Left" Margin="294,115,0,0" VerticalAlignment="Top" FontSize="14" Width="366"/>
            <Label x:Name="ProfileBirthday" Content="12/01/1990" HorizontalAlignment="Left" Margin="294,149,0,0" VerticalAlignment="Top" FontSize="14" Width="366"/>
            <Label x:Name="ProfileOccupation" Content="Student at UWA" HorizontalAlignment="Left" Margin="294,183,0,0" VerticalAlignment="Top" FontSize="14" Width="366"/>
            <DataGrid x:Name="ProfileEvents" GridLinesVisibility="None" HorizontalAlignment="Left" Height="242" Margin="34,261,0,0" VerticalAlignment="Top" Width="626" SelectionChanged="DataGrid_SelectionChanged" FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" IsReadOnly="True" Binding="{Binding Path=Date}" Width="90"></DataGridTextColumn>
                    <DataGridTextColumn Header="Event" IsReadOnly="True"  Binding="{Binding Path=Label}" Width="130"></DataGridTextColumn>
                    <DataGridTextColumn Header="Description" IsReadOnly="True"  Binding="{Binding Path=Description}" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="Events with this person" HorizontalAlignment="Left" Margin="34,227,0,0" VerticalAlignment="Top" FontSize="14" Opacity="0.75" Width="626"/>
            <Label Content="Profiles" HorizontalAlignment="Left" Margin="34,514,0,0" VerticalAlignment="Top" FontSize="14" Opacity="0.75" Width="626"/>
            <DataGrid x:Name="ProfileAccounts" GridLinesVisibility="None" HorizontalAlignment="Left" Height="81" Margin="34,548,0,0" VerticalAlignment="Top" Width="627" SelectionChanged="DataGrid_SelectionChanged" FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Type" IsReadOnly="True" Binding="{Binding Type}" Width="120"/>
                    <DataGridTextColumn Header="Name/Link" IsReadOnly="True"  Binding="{Binding Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>



</Window>
