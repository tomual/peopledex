<Window x:Class="peopledex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:peopledex"
        mc:Ignorable="d"
        Title="Main" Height="525.575" Width="869.309" Background="{x:Null}">
    <Window.Resources>
        <Style x:Key="Title" TargetType="Rectangle">
        </Style>
        <Style x:Key="GridViewColumnHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border BorderThickness="0,0,0,0" BorderBrush="Black" Background="#FF355976">
                            <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,4,5,4" Width="{TemplateBinding Width}" TextAlignment="Center" Foreground="#FFA4C9CB" FontFamily="Consolas" FontSize="10" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>

    <Grid Background="#FF4477A2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="341*" />
            <ColumnDefinition Width="520*" />
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Left" Height="475" VerticalAlignment="Top" Width="321" Margin="10,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="168*"/>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="270*"/>
            </Grid.RowDefinitions>
            <Button x:Name="NewProfileButton" Content="New" HorizontalAlignment="Left" Margin="12,0,0,4" Grid.Row="1" VerticalAlignment="Bottom" Width="52" Height="31" Click="NewProfileButton_Click" Background="#FFE6D56D" BorderBrush="#FFAC8A59" BorderThickness="1,0,1,5" Foreground="#FF38332B"/>
            <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Height="31" Margin="91,3,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="147" FontFamily="Consolas" Background="#FFA4C9CB" Foreground="#FF355976" Padding="7,7,7,0" BorderBrush="#FF355976"/>
            <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="249,2,0,0" Grid.Row="1" VerticalAlignment="Top" Width="60" Height="31"  Background="#FFE6D56D" BorderBrush="#FFAC8A59" BorderThickness="1,0,1,5" Foreground="#FF38332B"/>
            <Border CornerRadius="4" BorderBrush="#FF3B678D" BorderThickness="4" HorizontalAlignment="Center" Margin="10" Width="301" />
            <Rectangle Fill="#FFA4C9CB" HorizontalAlignment="Left" Height="140" Margin="14,14,0,0" Stroke="#FF355976" StrokeThickness="4" VerticalAlignment="Top" Width="293"/>

            <TextBlock HorizontalAlignment="Left" Margin="124,85,0,0" TextWrapping="Wrap" Text="Peopledex" VerticalAlignment="Top" FontFamily="Lucida Console" Foreground="#FF384759" Height="12" Width="72"/>
            <TextBlock HorizontalAlignment="Left" Margin="131,60,0,0" TextWrapping="Wrap" Text="]" VerticalAlignment="Top" FontFamily="Wingdings" Foreground="#FF384759" Height="26" Width="56" TextAlignment="Center" FontSize="20" RenderTransformOrigin="0.473,0.615"/>

            <Border CornerRadius="6" BorderThickness="5" BorderBrush="#FF3B678D" Margin="10" Grid.Row="2">
                <ListView x:Name="ProfileListing" Grid.Row="2" Foreground="#FF355976" Background="#FFA4C9CB" BorderBrush="#FF355976" SelectionChanged="ProfileListing_SelectionChanged" FontFamily="Consolas" Margin="0" Padding="-3,-1">\
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                            <GridViewColumn Header="ENTRY" Width="80" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="NAME" Width="120" DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <Border CornerRadius="4" BorderBrush="#FF3B678D" BorderThickness="4,2,4,4" HorizontalAlignment="Center" Margin="10,0,255,0" Width="56" Grid.Row="1" />
            <Border CornerRadius="4" BorderBrush="#FF3B678D" BorderThickness="3" HorizontalAlignment="Center" Margin="88,0,80,0" Width="153" Grid.Row="1" />
            <Border CornerRadius="4" BorderBrush="#FF3B678D" BorderThickness="4,2,4,4" HorizontalAlignment="Center" Margin="246,0,10,0" Width="65" Grid.Row="1" />
            <Border CornerRadius="4" BorderBrush="#CC5C8EB8" BorderThickness="1,1,0,0" HorizontalAlignment="Center" Margin="10" Width="301" />

        </Grid>
        <Grid Grid.Column="1" HorizontalAlignment="Left" Height="475" VerticalAlignment="Top" Width="500" Margin="10,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="6" BorderThickness="5" BorderBrush="#FF3B678D" Margin="10,10,10,47" Grid.Row="1">
                <ListView x:Name="ProfileEvents" Grid.Row="1" Background="#FFA4C9CB" BorderBrush="#FF355976" Height="207" VerticalAlignment="Top" Padding="-3,-1">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                            <GridViewColumn Header="DATE" Width="80" DisplayMemberBinding="{Binding Date}" />
                            <GridViewColumn Header="EVENT" Width="120" DisplayMemberBinding="{Binding Title}" />
                            <GridViewColumn Header="DESCRIPTION" Width="270" DisplayMemberBinding="{Binding Description}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
            <Border CornerRadius="6" BorderThickness="3" BorderBrush="#FF3B678D" Margin="10,10,334,81">
                <Image x:Name="ProfileImage" HorizontalAlignment="Left" Height="147" VerticalAlignment="Top" Width="156" Stretch="UniformToFill"/>
            </Border>
            <Rectangle Fill="#FFA4C9CB" HorizontalAlignment="Left" Height="98" Margin="181,59,0,0" Stroke="#FF355976" StrokeThickness="4" VerticalAlignment="Top" Width="309"/>
            <Rectangle Fill="#FFA4C9CB" HorizontalAlignment="Left" Height="36" Margin="181,10,0,0" Stroke="#FF355976" StrokeThickness="4" VerticalAlignment="Top" Width="309"/>
            <Button x:Name="PreviousProfileButton" Content="&lt;" HorizontalAlignment="Left" Margin="12,197,0,0" Grid.Row="1" VerticalAlignment="Top" Width="46" Height="31"  Background="#FFE4ACD2" BorderBrush="#FFC979A5" BorderThickness="1,0,1,5" Foreground="#FF38332B"/>
            <Button x:Name="NextProfileButton" Content="&gt;" HorizontalAlignment="Left" Margin="442,197,0,0" Grid.Row="1" VerticalAlignment="Top" Width="46" Height="31"  Background="#FFE4ACD2" BorderBrush="#FFC979A5" BorderThickness="1,0,1,5" Foreground="#FF38332B"/>
            <Button x:Name="EditProfileButton" Content="Edit" HorizontalAlignment="Left" Margin="68,197,0,0" Grid.Row="1" VerticalAlignment="Top" Width="60" Height="31"  Background="#FFA4E66D" BorderBrush="#FF8BB03D" BorderThickness="1,0,1,5" Foreground="#FF38332B"/>
            <Rectangle Fill="#FFA4C9CB" HorizontalAlignment="Left" Height="57" Stroke="#FF355976" StrokeThickness="4" VerticalAlignment="Top" Width="480" Margin="10,171,0,0"/>
            <TextBlock x:Name="ProfileDescription" HorizontalAlignment="Left" Margin="10,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Width="480" Padding="15,12" FontFamily="Consolas" FontSize="11"><Run Foreground="#FF355976" Text="Test"/></TextBlock>
            <TextBlock x:Name="ProfileNumber" HorizontalAlignment="Left" Margin="186,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56" Text="#000" Height="33" Padding="7,6,0,0" FontFamily="Consolas" Foreground="#FF3B678D"/>
            <TextBlock x:Name="ProfileName" HorizontalAlignment="Left" Margin="231,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Text="-" Height="36" Foreground="#FF355976" FontFamily="Consolas" FontSize="14" Padding="6,9,0,0"/>
            <TextBlock HorizontalAlignment="Left" Margin="190,89,0,0" TextWrapping="Wrap" Text="Occupation" VerticalAlignment="Top" Width="84" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41"/>
            <TextBlock HorizontalAlignment="Left" Margin="190,110,0,0" TextWrapping="Wrap" Text="Birthday" VerticalAlignment="Top" Width="84" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41"/>
            <TextBlock HorizontalAlignment="Left" Margin="190,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" Height="21" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41"><Run Text="Location"/><LineBreak/><Run/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="190,131,0,0" TextWrapping="Wrap" Text="Likes" VerticalAlignment="Top" Width="84" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41"/>
            <TextBlock HorizontalAlignment="Left" Margin="190,150,0,0" TextWrapping="Wrap" Text="Dislikes" VerticalAlignment="Top" Width="84" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41" Visibility="Hidden"/>
            <TextBlock x:Name="ProfileLocation" HorizontalAlignment="Left" Margin="270,68,0,0" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Width="209" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41"/>
            <TextBlock x:Name="ProfileOccupation" HorizontalAlignment="Left" Margin="270,89,0,0" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Width="209" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41"/>
            <TextBlock x:Name="ProfileBirthday" HorizontalAlignment="Left" Margin="270,110,0,0" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Width="209" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41"/>
            <TextBlock x:Name="ProfileLikes" HorizontalAlignment="Left" Margin="270,131,0,0" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Width="209" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41"/>
            <TextBlock x:Name="ProfileDislikes" HorizontalAlignment="Left" Margin="270,150,0,0" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Width="209" FontFamily="Consolas" FontSize="10" Foreground="#FF222B41" Visibility="Hidden"/>
            <Border CornerRadius="4" BorderBrush="#FF3B678D" BorderThickness="4,2,4,4" HorizontalAlignment="Center" Margin="9,195,439,5" Width="52" Grid.Row="1" />
            <Border CornerRadius="4" BorderBrush="#FF3B678D" BorderThickness="4,2,4,4" HorizontalAlignment="Center" Margin="66,195,369,5" Width="65" Grid.Row="1" />
            <Border CornerRadius="4" BorderBrush="#FF3B678D" BorderThickness="4,2,4,4" HorizontalAlignment="Center" Margin="440,195,10,5" Width="50" Grid.Row="1" />

        </Grid>
    </Grid>
</Window>
